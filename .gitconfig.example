[user]
        name = maxcold
        email = mxcold@gmail.com
[core]
        autocrlf = false
        safecrlf = true
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	logw = log --all --pretty=format:'%h %cd %s (%an)' --date=short --since='7 days ago'
	ls = ls-files
